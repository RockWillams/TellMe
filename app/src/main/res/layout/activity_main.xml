<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
 tools:context=".MainActivity">

<FrameLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/background"
    android:layout_weight="1" >
</FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/bottomBackGround" >

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottomtab1" />
            <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="同步"
                android:textSize="11sp"
            android:layout_below="@id/message_image"
            android:textColor="@color/fontcolorBlack" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/unread_count_bg"
            android:text="2"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message1_layout"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/message1_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottomtab1" />
        <TextView
            android:id="@+id/message1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="检查"
            android:textSize="12sp"
            android:layout_below="@id/message1_image"
            android:textColor="#82858b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/unread_count_bg"
            android:text="2"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message2_layout"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/message2_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottomtab1" />
        <TextView
            android:id="@+id/message2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="消息"
            android:textSize="12sp"
            android:layout_below="@id/message2_image"
            android:textColor="#82858b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/unread_count_bg"
            android:text="2"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message3_layout"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/message3_image"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bottomtab1" />
        <TextView
            android:id="@+id/message3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="消息"
            android:textSize="12sp"
            android:layout_below="@id/message3_image"
            android:textColor="#82858b" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/unread_count_bg"
            android:text="2"
            android:textColor="#ffffff"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>
</LinearLayout>

</LinearLayout>

